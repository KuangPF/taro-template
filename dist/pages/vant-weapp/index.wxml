<block wx:if="{{$taroCompReady}}">
    <view class="custom-class demo-block van-clearfix demo-block--padding">
        <view class="demo-block__title">按钮</view>
        <view>
            <van-button class="demo-margin-right">默认按钮</van-button>
            <van-button type="primary" class="demo-margin-right">主要按钮</van-button>
            <van-button type="info" class="demo-margin-right">信息按钮</van-button>
        </view>
        <view class="row">
            <van-button type="danger" class="demo-margin-right">危险按钮</van-button>
            <van-button type="warning">警告按钮</van-button>
        </view>
        <view class="demo-block__title">搜索</view>
        <van-search placeholder="请输入搜索关键词"></van-search>
        <view class="demo-block__title">图标</view>
        <van-icon name="close"></van-icon>
        <van-icon name="star"></van-icon>
        <van-icon name="star-o"></van-icon>
        <view class="row"></view>
    </view>
</block>